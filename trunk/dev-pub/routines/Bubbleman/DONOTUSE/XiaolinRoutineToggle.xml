<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	 <Script file="BubblemanRoutineToggle.lua" />
	 
	
	<Frame name="Bubbleman_Frame" parent="UIParent" hidden="false" enableMouse="true" movable="true">
		<Size x="165" y="110" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface/Tooltips/UI-Tooltip-Border" tile="true">
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="13"/>
			</EdgeSize>
			<BackgroundInsets>
				<AbsInset left="3" right="4" top="4" bottom="3"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" font="Fonts\FRIZQT__.TTF" inherits="GameFontNormal">
					<FontHeight>
					   <AbsValue val="12"/>
					</FontHeight>
				</FontString>
			</Layer>
		</Layers>
		 <Frames>
		  
		</Frames>
		<Scripts>
		   <OnLoad> 
				self:RegisterForDrag("LeftButton"); 
				self.TimeSinceLastUpdate = 0;
				Bubbleman_Frame:SetBackdrop({bgFile = "Interface/Tooltips/UI-Tooltip-Background", tile = true, tileSize = 16, edgeSize = 16, insets = { left = 4, right = 4, top = 4, bottom = 4 }});
				Bubbleman_Frame:SetBackdropColor(0,0,0,150)
		   </OnLoad>
		   <OnDragStart> self:StartMoving(); self.isMoving = true;</OnDragStart>
		   <OnDragStop> 
				self:StopMovingOrSizing(); 
				self.isMoving = false;
		   </OnDragStop>
		   <!-- <OnLeave> GameTooltip:Hide() </OnLeave> -->
			<OnUpdate> 
				RoutineToggles_OnUpdate(self, elapsed) 
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
